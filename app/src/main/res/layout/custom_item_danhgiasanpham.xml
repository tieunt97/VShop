<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tvTieuDe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tốt"
                android:textSize="15sp"
                android:textColor="@color/colorBlack"
                android:layout_toLeftOf="@id/rbDanhGia"/>

            <RatingBar
                android:id="@+id/rbDanhGia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/SmallRatingbar"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/tvTenKhachHang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nguyen Tai Tieu - 20/05/2018 (21:05)"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chứng nhận đã mua hàng"
            android:layout_marginBottom="10dp"
            android:drawableLeft="@drawable/shield_danhgia"
            android:drawablePadding="5dp"
            android:textColor="@color/colorGreen"/>

        <TextView
            android:id="@+id/tvNoiDung"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sản phẩm này tìm trên google không có miếng dán cường lực. Cần hỗ trợ, nếu có gửi qua mail này về địa chỉ cũ giao hàng toi sẽ thanh toán"
            android:textColor="@color/colorBlack"/>
    </LinearLayout>

</android.support.v7.widget.CardView>