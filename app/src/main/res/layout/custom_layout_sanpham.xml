<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp">

        <ImageView
            android:id="@+id/imgHinhSP"
            android:layout_width="match_parent"
            android:layout_height="185dp"
            android:scaleType="centerCrop"
            android:src="@drawable/xiaomi"/>

        <TextView
            android:id="@+id/tvTenSanPham"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Xiaomi 5 32GB Ram 3GB (Đen) - Hàng phân phối chính thức"
            android:layout_marginTop="15dp"
            android:maxLines="2"/>

        <TextView
            android:id="@+id/tvGiaSP"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="3.290.000 đ"
            android:textColor="@color/colorOrange"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/tvKhuyenMaiTraGop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Áp dụng trả góp"
            android:textSize="13sp"/>

        <FrameLayout
            android:id="@+id/framDanhGia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">
            <RatingBar
                android:id="@+id/rbDanhGia"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:scaleY="0.5"
                android:scaleX="0.5"
                android:transformPivotX="0dp"
                />

            <TextView
                android:id="@+id/tvSoDanhGia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(1453)"
                android:layout_gravity="right"
                android:layout_marginTop="2dp"
                android:layout_marginRight="65dp"/>
        </FrameLayout>


    </LinearLayout>

</android.support.v7.widget.CardView>