<LinearLayout android:layout_width="match_parent"
    android:layout_height="250dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="10dp"
    android:background="@color/colorGray">

    <android.support.v7.widget.CardView
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <RelativeLayout
            android:padding="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
            android:id="@+id/tv1"
            android:layout_alignParentLeft="true"
            android:textColor="@color/colorBlack"
            android:text="Họ tên khách hàng: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

            <TextView
                android:layout_toRightOf="@+id/tv1"
                android:text="Trần Quốc Trọng"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv2"
                android:layout_marginTop="10dp"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/tv1"
                android:textColor="@color/colorBlack"
                android:text="SDT: "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_below="@+id/tv1"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/tv2"
                android:text="0968896334"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv3"
                android:layout_marginTop="10dp"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/tv2"
                android:textColor="@color/colorBlack"
                android:text="Đến: "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_below="@+id/tv2"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/tv3"
                android:text="Trường Trinh,Thanh Xuân, Hà Nội"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv4"
                android:layout_marginTop="10dp"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/tv3"
                android:textColor="@color/colorBlack"
                android:text="Phí Ship: "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/tv4"
                android:layout_below="@id/tv3"
                android:text="20.000 VNĐ"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv5"
                android:layout_marginTop="10dp"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/tv4"
                android:textColor="@color/colorBlack"
                android:text="Tên mặt hàng: "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/tv5"
                android:layout_below="@id/tv4"
                android:text="Áo Thun"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv6"
                android:layout_marginTop="10dp"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/tv4"
                android:textColor="@color/colorBlack"
                android:text="Giá tiền: "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/tv6"
                android:layout_below="@id/tv4"
                android:text="100.000 VNĐ"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Button
                android:textColor="@color/colorWhite"
                android:layout_marginTop="10dp"
                android:background="@drawable/custom_btn_nhan"
                android:text="Nhận đơn hàng"
                android:layout_below="@id/tv6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </RelativeLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>