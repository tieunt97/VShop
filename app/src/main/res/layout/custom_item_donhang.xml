<LinearLayout android:layout_width="match_parent"
    android:layout_height="250dp"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="10dp"
    android:background="@color/colorGray">

    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <RelativeLayout
            android:padding="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
            android:id="@+id/tv1"
            android:layout_alignParentLeft="true"
            android:textColor="@color/colorBlack"
            android:text="Họ tên khách hàng: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tvTenKhachHang"
                android:layout_toRightOf="@+id/tv1"
                android:text="Trần Quốc Trọng"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv2"
                android:layout_marginTop="10dp"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/tv1"
                android:textColor="@color/colorBlack"
                android:text="SDT: "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tvSoDienThoai"
                android:layout_below="@+id/tv1"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/tv2"
                android:text="0968896334"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv3"
                android:layout_marginTop="10dp"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/tv2"
                android:textColor="@color/colorBlack"
                android:text="Đến: "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tvDiaChi"
                android:layout_below="@+id/tv2"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/tv3"
                android:text="Trường Trinh,Thanh Xuân, Hà Nội"
                android:lines="2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv4"
                android:layout_marginTop="10dp"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/tvDiaChi"
                android:textColor="@color/colorBlack"
                android:text="Phí Ship: "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tvPhiShip"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/tv4"
                android:layout_below="@id/tvDiaChi"
                android:text="20.000 VNĐ"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv5"
                android:layout_marginTop="10dp"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/tv4"
                android:textColor="@color/colorBlack"
                android:text="Tổng tiền: "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tvTongTien"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/tv5"
                android:layout_below="@id/tv4"
                android:text="500.0000"
                android:textColor="@color/colorRed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                />

            <TextView
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/tvTongTien"
                android:layout_below="@id/tv4"
                android:text="VNĐ"
                android:textColor="@color/colorBlack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv5"
                android:layout_marginTop="10dp"
                >
                <Button
                    android:id="@+id/btnXemThongTin"
                    android:textColor="@color/colorWhite"
                    android:background="@drawable/custom_btn_nhan"
                    android:text="Chi tiết"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:layout_weight="1"
                    />

                <Button
                    android:id="@+id/btnNhanDonHang"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1"
                    android:textColor="@color/colorWhite"
                    android:background="@drawable/custom_btn_nhan"
                    android:text="Nhận"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"/>
            </LinearLayout>

        </RelativeLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>